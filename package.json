{
    "name": "bagel-language",
    "displayName": "Bagel Language",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.55.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "bagel",
            "aliases": ["Bagel", "bagel"],
            "extensions": ["bgl"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "bagel",
            "scopeName": "source.bagel",
            "path": "./syntaxes/bagel.tmLanguage.json"
        }]
    },
    "scripts": {
        "apply:windows": "xcopy \".\" \"%USERPROFILE%\\.vscode\\extensions\\bagel-language\" /s/e/k/f/c/y",
        "apply:macos": "cp -Rf . ~/.vscode/extensions/bagel-language"
    }
}